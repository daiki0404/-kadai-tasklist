<h1>タスク一覧</h1><br>

<%if @tasks.any?%>
<div class="row">
  <div class="col-xs-6">
    <table class="table table-striped table-bordered">
      <thead>
        <tr class="success">
          <th>id</th>
          <th>タスク</th>
          <th>進捗</th>
        </tr>
      </thead>
    
      <tbody>
        <%@tasks.each do |task| %>
          <tr>
            <td><%=link_to task.id,task %></td>
            <td><%= task.content %></td>
            <td><%= task.status%></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
<%end%>
