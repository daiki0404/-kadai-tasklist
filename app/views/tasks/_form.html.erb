<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
      <%= form_for(task) do |f| %>
        <%if task.errors.any? %>
          <div class="alert alert-warning">
            <div id= "error_explanation">
              <ul>
                <% task.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <%end%>
              </ul>
            </div>
          </div>
        <%end%>
          
 
      <div calss="form-group">
        <%= f.label :content,"タスク" %>
        <%= f.text_field :content, class:"form-control" %><br>
        <p><%= f.label :status,"ステータス"%></p>
        <%= f.select:status,[["達成！"],["未達成"],["進行中"],["1234567891011"]],{:prompt => "選択してください"},class:"form-control"%></p>
        <%= f.submit "投稿",class:"btn btn-default"%>
      </div>
      <%end%>
  </div>
</div>